rules_version = '2';

// Regras de segurança para Firebase Storage
service firebase.storage {
  match /b/{bucket}/o {
    
    // Regra para fotos de perfil dos usuários
    match /users/{userId}/profile.jpg {
      // Permitir leitura para todos (fotos de perfil são públicas)
      allow read: if true;
      
      // Permitir upload/atualização apenas para o próprio usuário autenticado
      allow write: if request.auth != null 
                   && request.auth.uid == userId
                   && request.resource.size < 5 * 1024 * 1024  // Máximo 5MB
                   && request.resource.contentType.matches('image/.*');  // Apenas imagens
    }
    
    // Regra padrão: negar tudo que não foi especificado acima
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
