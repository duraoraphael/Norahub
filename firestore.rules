rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Função helper para verificar se usuário está autenticado
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Função helper para verificar se é admin (verifica em ambas as coleções)
    function isAdmin() {
      return isSignedIn() && (
        (exists(/databases/$(database)/documents/usuarios/$(request.auth.uid)) && 
         get(/databases/$(database)/documents/usuarios/$(request.auth.uid)).data.funcao == 'admin') ||
        (exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.funcao == 'admin')
      );
    }
    
    // Função helper para verificar se é gerente (verifica em ambas as coleções)
    function isManager() {
      return isSignedIn() && (
        (exists(/databases/$(database)/documents/usuarios/$(request.auth.uid)) && 
         get(/databases/$(database)/documents/usuarios/$(request.auth.uid)).data.funcao.matches('.*gerente.*')) ||
        (exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.funcao.matches('.*gerente.*'))
      );
    }
    
    // Função para validar tamanho de string
    function isValidStringLength(value, min, max) {
      return value is string && value.size() >= min && value.size() <= max;
    }
    
    // Função para validar que não há script tags ou código malicioso
    function isSafeString(value) {
      return value is string && 
             !value.matches('.*<script.*') && 
             !value.matches('.*javascript:.*') &&
             !value.matches('.*onerror.*') &&
             !value.matches('.*onclick.*');
    }
    
    // Função para validar tamanho de documento
    function isValidDocumentSize() {
      return request.resource.size() < 1048576; // 1MB max
    }
    
    // Coleção de usuários - NOVA (usuarios)
    match /usuarios/{userId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && 
                      request.auth.uid == userId &&
                      isValidDocumentSize() &&
                      request.resource.data.keys().hasAll(['nome', 'email', 'funcao']) &&
                      isValidStringLength(request.resource.data.nome, 2, 100) &&
                      isSafeString(request.resource.data.nome);
      allow update: if isSignedIn() && 
                      (request.auth.uid == userId || isAdmin() || isManager()) &&
                      isValidDocumentSize() &&
                      (!('funcao' in request.resource.data) || isAdmin()) && // Apenas admin pode mudar função
                      (isSafeString(request.resource.data.get('nome', '')) || !('nome' in request.resource.data));
      allow delete: if isAdmin();
    }
    
    // Coleção LEGADA 'users' - Permissão TOTAL durante migração
    match /users/{userId} {
      // Todos autenticados podem ler
      allow read: if isSignedIn();
      // Criar e atualizar (para migração)
      allow create, update: if isSignedIn();
      // Deletar (para limpeza após migração)
      allow delete: if isSignedIn();
    }
    
    // Coleção de projetos
    match /projetos/{projectId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && 
                      (isAdmin() || isManager()) &&
                      isValidDocumentSize() &&
                      isValidStringLength(request.resource.data.nome, 2, 200) &&
                      isSafeString(request.resource.data.nome);
      allow update: if isSignedIn() &&
                      isValidDocumentSize();
      allow delete: if isAdmin();
    }
    
    // Coleção de cargos
    match /cargos/{cargoId} {
      allow read: if isSignedIn();
      allow write: if isAdmin() && 
                     isValidDocumentSize() &&
                     isSafeString(request.resource.data.get('nome', ''));
    }
    
    // Coleção de formulários
    match /formularios/{formId} {
      allow read: if isSignedIn();
      allow create, update: if isSignedIn() &&
                              isValidDocumentSize();
      allow delete: if isAdmin();
    }
    
    // Coleção de security_logs (apenas escrita por Cloud Functions, leitura apenas admin)
    match /security_logs/{logId} {
      allow read: if isAdmin();
      allow write: if false; // Apenas Cloud Functions podem escrever via Admin SDK
    }
    
    // Coleção de rate_limits (apenas Cloud Functions)
    match /rate_limits/{limitId} {
      allow read, write: if false; // Apenas Cloud Functions via Admin SDK
    }
      allow delete: if isAdmin() || isManager();
    }
    
    // Coleção de arquivos
    match /arquivos/{fileId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn() && (resource.data.uploadedBy == request.auth.uid || isAdmin() || isManager());
      allow delete: if isSignedIn() && (resource.data.uploadedBy == request.auth.uid || isAdmin() || isManager());
    }
    
    // Coleção de notificações
    match /notifications/{notificationId} {
      allow read: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow create: if isSignedIn();
      allow update: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow delete: if isAdmin();
    }

    // Coleção de favoritos
    match /favorites/{userId} {
      allow read: if isSignedIn() && request.auth.uid == userId;
      allow create: if isSignedIn() && request.auth.uid == userId && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isSignedIn() && request.auth.uid == userId;
    }
  }
}
